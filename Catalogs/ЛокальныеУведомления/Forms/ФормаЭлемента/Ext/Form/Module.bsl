
// Процедура срабатывает при создании элемента на сервере
// Она предназначена для управления правами доступа к элементам формы,
// исходя из типа клиента

Процедура ПриСозданииНаСервере(Отказ, СтандартнаяОбработка)
    
    // Проверяем, является ли текущий сеанс мобильным клиентом
    Если ПараметрыСеанса.ЭтоМобильныйКлиент Тогда 
        
        // Запрещаем изменение определенных полей формы для мобильных клиентов
        // Эти поля становятся доступны только для просмотра
        Элементы.Код.ТолькоПросмотр = Истина;           
        Элементы.Наименование.ТолькоПросмотр = Истина;   
        Элементы.Наименование.ТолькоПросмотр = Истина;   
        Элементы.Пассажир.ТолькоПросмотр = Истина;       
        Элементы.ИдентификаторУведомления.ТолькоПросмотр = Истина; 
        Элементы.Поездка.ТолькоПросмотр = Истина;        
        
    Иначе 
        
        // Если это обычный клиент (не мобильный),
        // выводим сообщение, подтверждающее работу на сервере
        Сообщить("Это сервер");
    
    КонецЕсли;

КонецПроцедуры